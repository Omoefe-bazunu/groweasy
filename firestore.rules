rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Projects collection
    match /projects/{projectId} {
      // Allow anyone to read projects (public)
      allow read: if true;
      
      // Only authenticated users can create, update, or delete projects
      // You can make this more restrictive by checking for admin role
      allow create, update, delete: if request.auth != null;
      
    }
    
    // Services collection
    match /services/{serviceId} {
      // Allow anyone to read projects (public)
      allow read: if true;
      
      // Only authenticated users can create, update, or delete projects
      // You can make this more restrictive by checking for admin role
      allow create, update, delete: if request.auth != null;
      
    }
    
     // Services collection
    match /testimonials/{testimonialId} {
      // Allow anyone to read projects (public)
      allow read: if true;
      
      // Only authenticated users can create, update, or delete projects
      // You can make this more restrictive by checking for admin role
      allow create, update, delete: if request.auth != null;
      
    }
    
    
     // Team collection
    match /team/{teamId} {
      // Allow anyone to read projects (public)
      allow read: if true;
      
      // Only authenticated users can create, update, or delete projects
      // You can make this more restrictive by checking for admin role
      allow create, update, delete: if request.auth != null;
      
       }
       // Quotes collection
    match /quotes/{quoteId} {
      // Allow anyone to read projects (public)
      allow read, create: if true;
      
      // Only authenticated users can create, update, or delete projects
      // You can make this more restrictive by checking for admin role
      allow update, delete: if request.auth != null;
      
       }
       
       // Messages Collection
        match /contactMessages/{contactMessageId} {
      // Allow anyone to read projects (public)
      allow read, create: if true;
      
      // Only authenticated users can create, update, or delete projects
      // You can make this more restrictive by checking for admin role
      allow update, delete: if request.auth != null;
      
       }
       
        // Consultations collection
    match /consultations/{consultationId} {
      // Allow anyone to read projects (public)
      allow read, create: if true;
      
      // Only authenticated users can create, update, or delete projects
      // You can make this more restrictive by checking for admin role
      allow update, delete: if request.auth != null;
      
       }
    
    // Example: If you want to add admin users collection
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}